# Configura√ß√µes
CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2
TARGET = chip8
SOURCES = chip8.cpp main.cpp
OBJECTS = $(SOURCES:.cpp=.o)

# Regra principal
all: $(TARGET)

# Criar execut√°vel
$(TARGET): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(TARGET)
	@echo "‚úÖ Compila√ß√£o conclu√≠da!"

# Compilar .cpp para .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@
	@echo "üî® Compilando: $<"

# Executar
run: $(TARGET)
	./$(TARGET)

# Executar com ROM
run-rom: $(TARGET)
	./$(TARGET) $(ROM)

# Limpeza
clean:
	rm -f $(OBJECTS) $(TARGET)
	@echo "üßπ Limpeza conclu√≠da"

# Targets que n√£o s√£o arquivos
.PHONY: all run run-rom clean